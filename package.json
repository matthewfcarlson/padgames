{
  "name": "padgames",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\" --raw",
    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "dev:client": "vue-cli-service build --watch --mode development ./src/main.ts",
    "build:client": "vue-cli-service build --modern ./src/main.ts",
    "dev:server": "nodemon --config ./nodemon.config.json",
    "build:server": "rimraf dist/server && tsc -p tsconfig.server.json",
    "lint": "vue-cli-service lint",
    "start": "NODE_ENV=production node dist/server/server/server.js"
  },
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "cookie-parser": "^1.4.6",
    "core-js": "^3.22.7",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "pinia": "^2.0.14",
    "socket.io": "^4.5.1",
    "ts-node": "^10.8.0",
    "vue": "^3.2.36",
    "vue-router": "^4.0.15"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/lodash": "^4.14.182",
    "@vitejs/plugin-vue": "^2.3.3",
    "@vue/cli-plugin-router": "^5.0.4",
    "@vue/cli-plugin-typescript": "^5.0.4",
    "@vue/cli-plugin-vuex": "^5.0.4",
    "@vue/cli-service": "^5.0.8",
    "concurrently": "^7.2.1",
    "jsonwebtoken-esm": "^1.0.3",
    "nodemon": "^2.0.16",
    "sass": "^1.52.1",
    "sass-loader": "^13.0.0",
    "vite": "^2.9.9",
    "vue-tsc": "^0.35.0"
  }
}
